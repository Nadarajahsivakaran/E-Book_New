@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Order" asp-action="Cart">
                <i class="bi bi-cart-dash"></i>
                <span id="cartCount">0</span>
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-controller="Auth" asp-action="SignOut" class="nav-link btn btn-link text-white border-0">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="SignUp">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="SignIn">Login</a>
        </li>
    }
</ul>
